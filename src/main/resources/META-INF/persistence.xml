<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
	                    http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

	<persistence-unit name="VendasPU" transaction-type="RESOURCE_LOCAL">

		<class>br.com.vendas.model.Usuario</class>
		<class>br.com.vendas.model.Cliente</class>
		<class>br.com.vendas.model.Produto</class>
		<class>br.com.vendas.model.PedidoVenda</class>
		<class>br.com.vendas.model.PedidoVendaItem</class>

		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/vendas"/>
			<property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value="123"/>

			<!-- Configurações do Hibernate -->
			<property name="hibernate.hbm2ddl.auto" value="update"/>
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="true"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect"/>
		</properties>

	</persistence-unit>

</persistence>
